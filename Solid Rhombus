import java.util.Scanner;
public class solid_rhombus {
    public static void main(String arge[]){
        Scanner sc=new Scanner(System.in);
        int n = sc.nextInt();
        for (int i=1 ; i<=n; i++){

            // spaces
            for(int s=1; s<=n-i; s++){
            System.out.print(" ");
            }

            // stars
            for(int j=1; j<=n; j++){
                System.out.print("*");
            }
            System.out.println( );
    }
    
}
}
